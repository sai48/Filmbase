= form_for [@film, @theme, @comment], :html=>{:multipart=>true} do |f|
  -if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :image, "Прикрепить изображение:"
    = f.file_field :image
  .field
    = f.label :body
    = f.text_area :body
  .field
  .actions
    = f.submit 'Save'
